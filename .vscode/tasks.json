{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run firebase emulators",
      "command": "firebase emulators:start",
      "type": "shell",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          },
        }
      ],
    },
  ]
}
